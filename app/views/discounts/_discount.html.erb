<table class="table caption-top">
  <thead>
    <tr>
      <th>Base item</th>
      <th>Base item quantity</th>
      <th>Child item</th>
      <th>Child item quantity</th>
      <th>Discount</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td scope="col"><%= discount.base_item.name %></td>
      <td scope="col"><%= discount.base_item_quantity %></td>
      <td><%= discount.child_item.name %></td>
      <td><%= discount.child_item_quantity %></td>
      <td><%= discount.discount_percent %></td>
      <th scope="col">
        <%= link_to "Back to items", discounts_path, :class => 'btn btn-secondary' %> |
        <%= link_to "Edit this item", edit_discount_path(@discount), :class => 'btn btn-info' %> |
        <%= link_to "Destroy discount", [@discount], data: {
                                      turbo_method: :delete,
                                      turbo_confirm: "Are you sure?"
                                      }, :class => 'btn btn-danger' %>
      </th>
    </tr>
  </tbody>
</table>
