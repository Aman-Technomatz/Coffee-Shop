<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form class="row g-3">
    <div class="col-md-4">
      <label for="inputAddress" class="form-label">Name</label>
      <%= form.text_field :name, {class: 'form-control'} %>
    </div>
    <div class="col-md-4">
      <label for="inputAddress2" class="form-label">Price</label>
      <%= form.text_field :price, {class: 'form-control'} %>
    </div>
    <div class="col-md-4">
      <label for="inputState" class="form-label">Tax Percent</label>
      <%= form.collection_select(:tax_category_id, TaxCategory.all, 'id', 'tax_rate',  {prompt: 'Select Tax Value'}, { class: "form-select" }) %>
    </div>
    <div class="col-12">
      <div class="form-check">
        <%= form.check_box :availability, {class: 'form-check-input'} %>
        <label class="form-check-label" for="gridCheck">
          Availability
        </label>
      </div>
    </div>
    <div class="col-12">
      <%= form.submit :class => 'btn btn-primary' %>
    </div>
  </form>
<% end %>
